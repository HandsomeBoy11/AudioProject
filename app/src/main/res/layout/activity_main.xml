<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简短铃声" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取金币1" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="获取金币2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背景音乐" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背景音乐" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放本地音频" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放本地音频" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放网络音频" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放网络音频" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录制音频" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放带有进度条的网络音频" />

    <!--<Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放网络音频" />-->

    <com.longfor.audioproject.audio.seekBar.AudioReadQuestionView
        android:id="@+id/audioReadQuestionView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp" />


</LinearLayout>